<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"

    android:background="@drawable/dark_background"
    android:onClick="HidePopup_interface"
    >

    <ImageView
        android:layout_marginTop="1dp"
        android:layout_margin="3dp"
        android:id="@+id/list_image_bear"
        android:layout_width="40dp"
        android:scaleType="center"
        android:layout_height="130dp"/>
    <Space
        android:id="@+id/spacer"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/list_image_bear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_toRightOf="@id/spacer"
        android:layout_marginTop="1dp"
        android:id="@+id/name_of_bear"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="17sp"

        android:layout_marginLeft="@dimen/Recycler_gap_between_item"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
    <TextView


        android:layout_above="@+id/more_bear"
        android:layout_toRightOf="@+id/spacer"
        android:textSize="13sp"
        android:textAlignment="viewStart"


        android:layout_marginLeft="@dimen/Recycler_gap_between_item"
        android:id="@+id/shortdescription_of_bear"
        android:textColor="#D0E4E0E0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:layout_marginLeft="@dimen/Recycler_gap_between_item"
        android:layout_marginTop="5dp"
       android:layout_above="@+id/row_devider"
        android:layout_toRightOf="@+id/spacer"

        android:text="MORE INFO"
        android:layout_centerVertical="true"
        android:textSize="@dimen/b1_textsize"
        android:id="@+id/more_bear"
        android:textColor="#F38703"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />
<Space
    android:layout_marginTop="10dp"
    android:layout_margin="5dp"
    android:layout_below="@+id/list_image_bear"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/next_spacer"
    />
    <LinearLayout
        android:layout_margin="10dp"
        android:id="@+id/row_devider"
       android:layout_below="@+id/next_spacer"
        android:background="#5E5959"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:orientation="vertical" />
</RelativeLayout>